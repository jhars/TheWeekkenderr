<div class="col-sm-8 col-sm-offset-2">

<h1> Sign up! </h1>

<%= form_for @user do |f| %>
  <div class="form-group">
    First name: <%= f.text_field :f_name, class: "form-control" %><br />
    Last name : <%= f.text_field :l_name, class: "form-control" %><br />
    Email : <%= f.email_field :email, class: "form-control" %><br />
    Password    : <%= f.password_field :password, class: "form-control" %><br />
    <%= f.submit "Sign Up", class: "btn btn-primary" %>
<% end %>

</div>
